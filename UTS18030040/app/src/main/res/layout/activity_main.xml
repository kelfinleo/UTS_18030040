<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--membuat layout UJIAN TENGAH SEMESTER-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="365dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="UJIAN TENGAH SEMESTER"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />
<!--membuat layout masukan NIM tetapi di textview di hapus agar tidak tertampil tulisan NIM saat memasukan data-->
    <EditText
        android:id="@+id/masukan_nim"
        android:layout_width="382dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.128" />
    <!--membuat layout masukan Nama tetapi di textview di hapus agar tidak tertampil tulisan Nama saat memasukan data-->
    <EditText
        android:id="@+id/masukan_nama"
        android:layout_width="386dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />
    <!--membuat layout tulisan pilihan kelas-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="181dp"
        android:layout_height="41dp"
        android:text="Silahkan pilih kelas"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />
    <!--membuat radiogroup untuk menampung radiobutton agar terdapat pilihan kelas-->
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="184dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas A" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas B" />
    </RadioGroup>
    <!--membuat layout button menyimpan data yang telah terisi-->
    <Button
        android:id="@+id/button"
        android:layout_width="390dp"
        android:layout_height="55dp"
        android:onClick="simpan_data"
        android:text="SIMPAN DATA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.853" />
    <!--membuat layout NIM untuk menunjukan dimana user harus mengisikan data NIM-->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="389dp"
        android:layout_height="41dp"
        android:text="NIM"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />
    <!--membuat layout Nama untuk menunjukan dimana user harus mengisikan data Nama-->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="398dp"
        android:layout_height="57dp"
        android:text="NAMA"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.31" />

</androidx.constraintlayout.widget.ConstraintLayout>